<Window x:Class="HostCord.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HostCord"
        mc:Ignorable="d"
        Title="MainWindow" Height="340" Width="500">
    <StackPanel>
        <TextBox Name="Token" Text="Paste your token here..." TextAlignment="Center" Height="20" Margin="20,20,20,20"/>
        <TextBox Name="Logs" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Height="200" Margin="20,0,20,20"/>
        <Button Content="Connect" Height="30" Margin="20,0,20,20" Click="Button_Click"/>
    </StackPanel>
</Window>
